{
  "[dart]": {
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "editor.formatOnPaste": false
  },
  "html.format.enable": false,
  "githubPullRequests.ignoredPullRequestBranches": ["master"],
  "files.trimTrailingWhitespace": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never",
    "source.fixAll": "explicit"
  },

  "dart.analyzeAngularTemplates": false,
  "dart.documentation": "full",
  "dart.enableCompletionCommitCharacters": true,
  "dart.renameFilesWithClasses": "prompt",
  "dart.allowTestsOutsideTestFolder": true,
  "dart.autoImportCompletions": true,
  "dart.flutterSdkPath": "~/development/custom",
  // Remove .fvm files from search
  "search.exclude": {
    "**/.fvm": true
  },
  // Remove from file watching
  "files.watcherExclude": {
    "**/.fvm": true
  }
}
